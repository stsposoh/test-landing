/*блок Преимущества*/
.cards
  width 100%
  margin-top 50px
  margin-bottom 59px
  padding 0 10px
  perspective 600px
  .card
    width 23%
    min-width 230px
	min-height 350px
    margin 0 14px 10px
    display inline-block
    padding 55px 25px 38px
    background-color $h1
    vertical-align top
    &-on
      opacity 1
      transition all 1s ease
    &-off
      opacity 0
      transform rotateY(100deg)
      transition all 1s ease
    div
      margin auto
      width 122px
      height 122px
      border-radius 50%
      background-color $link-active
      background-size 56%
      background-repeat no-repeat
      background-position center
    &:first-child div
      background-image url(/img/icons/section_4/1.svg)
    &:nth-child(2) div
      background-image url(/img/icons/section_4/2.svg)
    &:last-child div
      background-image url(/img/icons/section_4/3.svg)
    span
      display inline-block
      width 100%
      margin 19px 0
      color $main-color
      font-family 'RalewayBold', sans-serif
      font-size 16px
      text-transform uppercase
    p
      font-family 'RalewayRegular', sans-serif
      font-size 14px
      color #8C99A6
      span
        display inline
        color $link-active
        font-family 'RalewayBold', sans-serif
        font-size 14px
      
.deal
  background-color #E5E5E5
  .btn-sect-color
    background-color #D6D6D6

/*блок Как мы работаем*/
.bg-dark.sect:before
  background-image url(/img/bah_2.png)
  
.bg-dark
  background-color $h1
  h2
    color $main-color
  .btn-sect-color
    background-color #394B5F

.triangles-container
  color: $main-color
  font-family: "PFCentroSlabProMedium", sans-serif
  font-size: 19px
  margin: 49px 0 89px
  text-align: center
  .tc-item
    width: 290px
    height: 128px
    display: inline-block
    position: relative
    margin-left: -45px
    vertical-align: top
    cursor: default
    transition: all .5s ease
    &:first-child
      margin-left: 0
      .tc-content
        margin-left: 50px
    &:hover
      transform: scale(1.08)
      z-index: 3
      path
        fill-opacity: 0!important
        stroke-opacity: 1!important
    svg
      position: absolute
      top: 0
      left: 0
      z-index: 0
    .tc-content
      position: relative
      z-index: 1
      margin-top: 43px
      margin-left: 60px
      text-align: left
      padding-left: 40px
      opacity: 0
      transition: all 1s ease
      &-on
        opacity: 1
      span
        font-size: 20px
        margin-left: -22px
        position: absolute
      img
        height: 40px
        float: left
        margin-left: -40px
        margin-right: 32px      


 /*С кем можно связаться*/
