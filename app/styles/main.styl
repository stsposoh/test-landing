/*Custom Styles Here*/
.opacityTrue
  opacity 0

.sect
  position relative
  width 100%
  padding-top 93px
  text-align center
  &::before
    content ''
    position absolute
    top -6px
    left 0
    z-index 2
    width 100%
    height 20px
    background-image url(/img/bah_1.png)
    background-repeat repeat-x
  .sect-cont
    margin-bottom 10px
  h1,h2
