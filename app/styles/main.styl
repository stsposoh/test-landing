    font-size 30px
    color $h1
    text-transform uppercase
  h2
    font-size 24px
  .h2
    margin 40px 0
  h3
    margin-bottom 25px
    line-height 23px
    font-weight 500
  hr
    border-color #b7b7b7
  .hr-fat
