/*Отзывы*/
.reviews
  background-color #E5E5E5 
  &.sect:before
    background-image url(/img/bah_3.png)
  .slider
    position relative
    width 100%
    max-width 975px
    margin auto
    margin-bottom 62px
    .item
      text-align center
      padding 0 55px 38px
      img
        margin auto
        display block
        margin-top 31px
        margin-bottom 20px
        width 150px
        height 150px
        border-radius 50%
        border 8px solid $link-active
      h3
        margin-bottom 4px
        text-transform none
        font-family 'RalewayBold', sans-serif
        font-size 18px
      p:first-of-type
        margin-bottom 8px
        color #6E7B8B
    .owl-item
      img, h3, p:first-of-type
        opacity 0
        transform translate3d(200px, 0, 0)
        transition all .5s ease
      &.active 
        img, h3, p:first-of-type
          opacity 1
          transition all .5s ease
          transform translate3d(0, 0, 0)
          transition-delay .3s
        h3
          transition-delay .2s 
        p:first-of-type
          transition-delay .1s 
    .owl-controls
      text-align: center
      .owl-dot
        width: 15px
        height: 15px
        margin: 0 3px
        background-color: #ccc
        display: inline-block
        border-radius: 10em
        &.active
          background-color: $link-active
      .owl-nav
        position: absolute
        top: 24%
        width: 100%
        > div
          height: 29px
          width: 16px
          background-image: url(/img/slider_arrows.png)
          position: absolute
          left: 20px
          opacity: .5
          transition: all .25s ease
          &:hover
            opacity: 1
        .owl-next
          right: 20px
          left: auto
          background-position: -16px 0
      
   
